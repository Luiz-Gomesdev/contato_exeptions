package br.com.luiz.contato.entities;

public class Agenda {
	
	private Contato[] contatos;

	public Agenda() {
		contatos = new Contato[5];
	}
	
	public void adicionarContato(Contato c) { //verificar se a agenda está cheia
		
		boolean cheia = true;
		for (int i=0; i <contatos.length; i++) {
			if (contatos[i] != null) {
				contatos[i] = c;
				cheia = false;
			}
		}
		
	}
	
	@Override
	public String toString() {
		
		String s = "";
		for (Contato c : contatos) {
			s += c.toString() + "\n";
		}
		return s;
	}
	

}
