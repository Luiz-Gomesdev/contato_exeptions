package br.com.luiz.contato.entities;

import java.util.Scanner;

import br.com.luiz.contato.exeptions.AgendaCheiaExeption;
import br.com.luiz.contato.exeptions.ContatoNaoExisteExeption;

public class Agenda {
	
	Scanner sc = new Scanner(System.in);
	
	private Contato[] contatos;

	public Agenda() {
		contatos = new Contato[5];
	}
	
	public void adicionarContato(Contato c) throws AgendaCheiaExeption { //verificar se a agenda está cheia
		
		boolean cheia = true;
		for (int i=0; i <contatos.length; i++) {
			if (contatos[i] != null) {
				contatos[i] = c;
				cheia = false;
			}
		}
		if (cheia) {
			//lançar exception
			throw new AgendaCheiaExeption();
		}
		
	}
	
	public int consultaContatoPorNome(String nome) throws ContatoNaoExisteExeption {
		
		for (int i=0; i<contatos.length; i++) {
			if (contatos[i] != null) {
				if (contatos[i].getNome().equalsIgnoreCase(nome)) {
					return i;
				}
			}
		}
		//lançar exception de contato inexistente
		throw new ContatoNaoExisteExeption(nome);
	}
	
	int opcao = obterOpcaoMenu(sc);
	
	public static int obterOpcaoMenu(Scanner sc) {
		
		boolean entradaValida = false;
		int opcao = 3;
		
		while (!entradaValida) {
			System.out.println("Digite a opção desejada:");
			System.out.println("1: Consultar contato");
			System.out.println("2: Adicionar contato");
			System.out.println("3: Sair");
			
			try {
				if (opcao != 1 || opcao != 2 || opcao != 3) {
					throw new Exception("Entrada inválida");
				} else {
					entradaValida = true;
				}
			}
			catch (Exception e) {
				System.out.println("Entrada inválida, digite novamente");
			}
		}
		return opcao;
	}
	
	@Override
	public String toString() {
		
		String s = "";
		for (Contato c : contatos) {
			s += c.toString() + "\n";
		}
		return s;
	}
	

}
